<Window x:Class="SpsModernWpfControls.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpsModernWpfControls.Demo" 
        xmlns:icon="clr-namespace:SpsModernWpfControls.Controls.Icon;assembly=SpsModernWpfControls.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Resources\Icons.xaml"/>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <icon:XamlContentIcon XamlIcon="{StaticResource AlertIconPath}" Caption="Hallo Welt" Background="Yellow"/>
            <icon:XamlPathIcon Name="Icon2" XamlPath="{StaticResource AlertIconPath}" IconSize="Small" IconForeground="Red" Caption="Hallo Welt" 
                                     CaptionPosition="AboveIcon" CaptionMargin="0,0,0,8" Background="Black"/>
            <Button Click="Button_Click" IsEnabled="False">
                <icon:XamlPathIcon Name="Icon3" XamlPath="{StaticResource AlertIconPath}" IconSize="Small" IconForeground="Red" Caption="Hallo Welt"
                                  IsEnabled="False" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
